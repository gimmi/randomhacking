{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://gimmi.github.com/schemas/sample.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "symbols": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "tags"
        ]
      }
    }
  },
  "required": [
    "name",
    "symbols"
  ]
}
