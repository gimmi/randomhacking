<Window x:Class="SpikeWpf.ModalWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding Path=DisplayName}" Height="205" Width="375">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="40" />
		</Grid.RowDefinitions>
		<ContentControl Grid.Row="0" Content="{Binding}" />
		<Grid Grid.Row="1" Margin="5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="80" />
				<ColumnDefinition Width="5" />
				<ColumnDefinition Width="80" />
			</Grid.ColumnDefinitions>
			<Button Grid.Column="1" Content="Cancel" Click="cancelButton_Click"></Button>
			<Button Grid.Column="3" Content="Ok" Click="okButton_Click"></Button>
		</Grid>
	</Grid>
	
</Window>
