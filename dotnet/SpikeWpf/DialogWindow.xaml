<Window x:Class="SpikeWpf.DialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SpikeWpf"
    Title="{Binding Path=Title}" Height="179" Width="314">
	<Window.CommandBindings>
		<CommandBinding Command="local:DialogWindow.OkCommand" CanExecute="OkCommand_CanExecute" Executed="OkCommand_Executed" />
		<CommandBinding Command="local:DialogWindow.CancelCommand" CanExecute="CancelCommand_CanExecute" Executed="CancelCommand_Executed" />
	</Window.CommandBindings>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<ContentControl Grid.Row="0" Content="{Binding}" />
		<Grid Grid.Row="1" Margin="5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Button Grid.Column="1" Padding="5" Command="local:DialogWindow.OkCommand" Margin="5 0 0 0" Content="Cancel"></Button>
			<Button Grid.Column="2" Padding="5" Command="local:DialogWindow.CancelCommand" Margin="5 0 0 0" Content="Ok"></Button>
		</Grid>
	</Grid>
</Window>
